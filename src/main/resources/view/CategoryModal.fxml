<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="university.jala.finalProject.UI.controller.CategoryModalController"
      spacing="15" prefWidth="400" prefHeight="250"
      style="-fx-padding: 20;">

    <Label fx:id="titleLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
        </rowConstraints>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Color:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="colorField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="#FFFFFF (opcional)"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancelar" onAction="#cancel"/>
        <Button fx:id="saveButton" text="Guardar" onAction="#saveCategory" defaultButton="true"/>
    </HBox>

</VBox>