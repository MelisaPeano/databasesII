<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="university.jala.finalProject.UI.controller.TasksController"
      spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Mis Tareas" styleClass="h1"/>

    <!-- Formulario para agregar tareas -->
    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Nombre de la tarea" />
        <TextField fx:id="txtDescription" promptText="Descripción" />
        <Button text="Agregar" onAction="#onAddTask"/>
    </HBox>

    <TableView fx:id="taskTable" prefHeight="350" editable="true">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colName" text="Nombre" prefWidth="180"/>
            <TableColumn fx:id="colDescription" text="Descripción" prefWidth="220"/>
            <TableColumn fx:id="colStatus" text="Estado" prefWidth="130"/>
            <TableColumn fx:id="colActions" text="Acciones" prefWidth="180"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <ProgressIndicator fx:id="pi" visible="false" managed="false"/>
        <Button text="Refrescar" onAction="#onRefresh"/>
    </HBox>
</VBox>
