<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="university.jala.finalProject.UI.controller.CategoriesController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Gestión de Categorias" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="newCategoryButton" text="Nueva Categoria" onAction="#createNewCategory"/>
        <Button fx:id="editButton" text="Editar" onAction="#editCategory" disable="true"/>
        <Button fx:id="deleteButton" text="Eliminar" onAction="#deleteCategory" disable="true"/>
    </HBox>

    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colorColumn" text="Color" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Fecha de Creación" prefWidth="150"/>
            <TableColumn fx:id="listsCountColumn" text="Numero de Listas" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>